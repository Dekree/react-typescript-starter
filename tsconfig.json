{
  "compilerOptions": {
    "jsx": "react",
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "removeComments": true,
    "baseUrl": "./frontend",
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules/*"
  ]
}
